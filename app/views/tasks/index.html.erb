<% if @tasks.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>誰に</th>
        <th>どのような</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= link_to task.id, task %></td>
          <td><%= task.status %></td>
          <td><%= task.content %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div>
    <%== pagy_bootstrap_nav(@pagy) %>
  </div>
<% end %>

<div style="text-align: center">
  <h2>愚痴を投稿して下さい</h2>
  <div>
    <%= link_to 'シンプルモード', new_task_path,class: "btn btn-primary" %>
    <%= link_to '反省モード', new_task_path,class: "btn btn-primary" %>
  </div>
</div>
