<% if taskposts.any? %>
  <ul class="list-unstyled mt-2">
    <% taskposts.each do |taskpost| %>
      <li class="d-flex">
        <img class="rounded me-2 mb-5" src="<%= gravatar_url(taskpost.user,{ size:64}) %>" alt="">
        <div>
          <div>
            <%= link_to taskpost.user.name, user_path(taskpost.user), class: "text-decoration-none" %> <span class="text-muted">posted at <%= taskpost.created_at %></span>
          </div>
          <div>
            <p><%= taskpost.content %></p>
          </div>
          <div>
            <% if current_user == taskpost.user %>
              <%= link_to "Delete", taskpost, method: :delete,data: {confirm: "You sure?"},class: "btn btn-danger btn-sm"%>
            <% end %>
          </div> 
        </div>
      </li>
    <% end %>
  </ul>
  <%== pagy_bootstrap_nav(@pagy) %>
<% end %>
